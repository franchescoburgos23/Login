{{define "Sign-up"}}

 {{ template "head-Sign"}}


 <div class="container-fluid">
    <div class="row justify-content-center">
     <section class="col-12 col-sm-6 col-md-3">
 
            <form class="form-container  bg-light" method="post" action="/registred">
                <div class="form-group px-3 pt-3 pb-2">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp" placeholder="Enter email">
                    <small id="emailHelp" class="form-text text-muted">Please your email .</small>
                </div>
                <div class="form-group px-3 pb-2">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Enter your Password">
                    <small id="emailHelp" class="form-text text-muted">Please enter an correct password .</small>
                </div>

                 <div class="form-group px-3 pb-2">
                    <label for="exampleInputPassword1">Confirm the Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Confirm your Password">
                    <small id="emailHelp" class="form-text text-muted">Please enter an correct password .</small>
                </div>

                 <div class="px-3 pb-2">
                    <button type="submit" class="btn btn-primary btn-block px-3">Send</button>
                 </div>

                 <div class="px-3 pb-2">

                 <a class="link" href="#"> click here if you don't have an account</a>
                  
                 </div>
            </form>

        </section>       
    </div>
</div>




{{template "foot"}}


{{end}}